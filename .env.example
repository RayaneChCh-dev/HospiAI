# ===========================================
# HospiAI - Environment Configuration
# ===========================================

# Database Connection
# Replace with your actual PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Example: postgresql://postgres:password@localhost:5432/hospiai
DATABASE_URL="postgresql://postgres:password@localhost:5432/hospiai"

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-key-here-replace-in-production"
AUTH_URL="http://localhost:3000"


# JWT Authentication Configuration (RS256 with RSA keys)
# Used for /api/login and JWKS authentication
# Generate RSA key pair with:
#   openssl genrsa -out private.pem 2048
#   openssl rsa -in private.pem -pubout -out public.pem
AUTH_JWT_ISSUER="hospiai-api"
AUTH_JWT_AUDIENCE="hospiai-mcp"

# MCP Server Configuration
# URL of the external FastMCP server for token generation
MCP_SERVER_URL="your-mcp-server-url-here"

# Application Configuration
NEXT_PUBLIC_APP_NAME="HospiAI"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

